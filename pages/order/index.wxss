@import "../../assistant/font/iconfont.wxss";

.box {
  padding: 15rpx;
  background-color: #f8f8f8;  
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  z-index: 999;
}

.address {
  /* 横向排列 */
  flex-direction: row;
  position: relative;
}

.change {
  color: #ff8448;
  font-size: 28rpx;
}

.shop {
  margin: 0 20rpx;
}

.phone {
  margin-top: 10rpx;
  flex-direction: row;
  font-size: 24rpx;
  color: #949494;
}

.local {
  margin-left: 15rpx;
  width: 380rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.arrow_right {
  position: absolute;
  right: 40rpx;
  top: 40rpx;
}

.left_menu {
  background-color: #f4f4f4;
  width: 200rpx;
  height: 100%;
}
.content{
  margin-top: 110rpx;
  height: 100vh;
}
.right_content {
  flex: 1;
  height: 100%;
}

.srearch {
  height: 100rpx;
  color: #767676;
  font-size: 28rpx;
  line-height: 100rpx;
}

.icon-tubiao- {
  font-size: 50rpx;
}

.hotsel {
  background: #f8f8f8;
  padding: 30rpx;
  /* border: 1rpx solid red; */
  text-align: center;
}

.hotsel image {
  width: 120rpx;
  height: 120rpx;
}

.hotsel view {
  font-size: 26rpx;
}

.banner {
  width: 520rpx;
  height: 240rpx;
}

.banner_bg {
  padding: 15rpx;
  text-align: center;
}

.active {
  background: white;
}

.neirong {
  padding: 15rpx;
}

.title {
  color: #7d7d7d;
  font-weight: bold;
  font-size: 24rpx;
  margin-bottom: 20rpx;
}

.goods {
  width: 150rpx;
  height: 150rpx;
}

.goodlist {
  margin-bottom: 40rpx;
}

.goodsname {
  font-size: 26rpx;
  font-weight: bold;
}

.desc {
  font-size: 24rpx;
  color: #b6b6b6;
  width: 320rpx;
  /* border: 1rpx solid red; *//* margin: 5rpx auto; */
}

.goods_right {
  margin-left: 10rpx;
  flex-direction: column;
  position: relative;
}

.price {
  font-size: 24rpx;
  color: #808080;
}

.add {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  color: white;
  background-color: #fe9a69;
  line-height: 40rpx;
  text-align: center;
  position: absolute;
  right: -16rpx;
  bottom: 5rpx;
}

.detail{
  position: absolute;
  /* border: 1px solid red; */
  background: white;
  left: 0vw;
  top: 10vh;
  width: 100vw;
}
.boxcart{
  position: fixed;
  left: 0;
  top: 10vh;
  
}
.close{
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 50%;
  border: 1rpx solid #D5D5D5;
  color: #D5D5D5;
  position: relative;
  left:650rpx; 
}
.good_detail{
  position: relative;
}
.good_detail .img{
  width: 180rpx;
  height: 180rpx;
}
.good_detail{
  background: white;
  border-radius:8rpx 8rpx 0 0;
  padding: 20rpx; 
}
.bg{
  border-bottom:1rpx solid #eee;
  padding-bottom: 20rpx;
}
.production{  
  margin-left: 20rpx;
}
.good_detail_desc{
  font-size: 26rpx;
  color: #b6b6b6;
  margin: 20rpx auto;
}

/* 数量加减 */
.right{
  display: flex;
  position: absolute;
  right: 30rpx;
  bottom: 40rpx;
  
}

.right .mus {
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 50%;
  text-align: center;
  border: 2rpx solid #fe9a69;
  color: #fe9a69;
}

.right .plus {
  background: #fe9a69;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 50%;
  text-align: center;
  border: 2rpx solid #fe9a69;
  color: white;
}

.right input {
  width: 60rpx;
  text-align: center;
}

/* 规格 */
.guige{
  font-size: 28rpx;
  margin-bottom: 20rpx;
}
.guige_item1{
  background: #F8F8F8;
  padding:10rpx 30rpx;
  font-size: 26rpx;
  border-radius: 30rpx;
  display: inline-block;
}
.guige_item1.activeguige{
  background:#FE9A69;
  color: white;
}
.wendu{
  margin-bottom: 20rpx;
}
.wendu .guige_item1{
  text-align: center;
  width: 100rpx;
  margin-right: 30rpx;
  /* border: 1px solid red; */
}
.btn{
  color: white;
  background: #fe9a69;
  border: none;
  font-size: 28rpx;
  border-radius: 50rpx;
}